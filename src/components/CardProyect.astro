---
const {
	site,
	img1,
	img2,
	img3,
	img4,
	img5,
	img6,
	title,
	parf,
	stack1,
	stack2,
	stack3,
	stack4,
	stack5,
	stack6,
	stack1c,
	stack2c,
	stack3c,
	stack4c,
	stack5c,
	stack6c,
	speed,
} = Astro.props
---

<a
	href={site}
	class="group relative col-span-1 flex flex-col items-end justify-end bg-gradient-to-b from-transparent to-black transition-all"
>
	<div
		class="scroll absolute flex h-[10rem] flex-col gap-3 overflow-y-auto p-3 md:h-[13rem] lg:overflow-y-visible"
	>
		<h4 class="z-10 w-full font-spacemonobold text-xl md:text-2xl">{title}</h4>
		<p class="z-10 text-[14px]">
			{parf}
		</p>
		<div class="flex flex-wrap gap-1">
			<span class:list=`rounded-full ${stack1c} p-1 px-2 md:text-xs text-[10px]`
				>{stack1}</span
			>
			<span class:list=`rounded-full ${stack2c} p-1 px-2 md:text-xs text-[10px]`
				>{stack2}</span
			>
			<span class:list=`rounded-full ${stack3c} p-1 px-2 md:text-xs text-[10px]`
				>{stack3}</span
			>
			<span class:list=`rounded-full ${stack4c} p-1 px-2 md:text-xs text-[10px]`
				>{stack4}</span
			>
			<span class:list=`rounded-full ${stack5c} p-1 px-2 md:text-xs text-[10px]`
				>{stack5}</span
			>
			<span class:list=`rounded-full ${stack6c} p-1 px-2 md:text-xs text-[10px]`
				>{stack6}</span
			>
		</div>
	</div>
	<swiper-container
		autoplay="true"
		loop="true"
		speed={speed}
		class="-z-10 h-full w-full"
	>
		<swiper-slide
			><img
				class="transition-all group-hover:contrast-200"
				src={img1}
				alt="Imagen del slider"
			/></swiper-slide
		>
		<swiper-slide
			><img
				class="transition-all group-hover:contrast-200"
				src={img2}
				alt="Imagen del slider"
			/></swiper-slide
		>
		<swiper-slide
			><img
				class="transition-all group-hover:contrast-200"
				src={img3}
				alt="Imagen del slider"
			/></swiper-slide
		>
		<swiper-slide
			><img
				class="transition-all group-hover:contrast-200"
				src={img4}
				alt="Imagen del slider"
			/></swiper-slide
		>
		<swiper-slide
			><img
				class="transition-all group-hover:contrast-200"
				src={img5}
				alt="Imagen del slider"
			/></swiper-slide
		>
		{
			img6 ? (
				<swiper-slide>
					<img
						class="transition-all group-hover:contrast-200"
						src={img6}
						alt="Imagen del slider"
					/>
				</swiper-slide>
			) : (
				""
			)
		}
	</swiper-container>
</a>
<style>
	.scroll {
		--sb-track-color: #1b3143;
		--sb-thumb-color: #2b5b79;
		--sb-size: 2px;

		&::-webkit-scrollbar {
			width: var(--sb-size);
		}

		&::-webkit-scrollbar-track {
			background: var(--sb-track-color);
			border-radius: 3px;
		}

		&::-webkit-scrollbar-thumb {
			background: var(--sb-thumb-color);
			border-radius: 3px;
		}

		&::-webkit-scrollbar:horizontal {
			display: none;
		}

		@supports not selector(::-webkit-scrollbar) {
			scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
			scrollbar-width: thin;
		}
	}

	.animation {
		opacity: 0;
		transition: opacity 2s;
	}

	.scroll-animation {
		opacity: 1;
	}
</style>
<script
	is:inline
	src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
></script>
